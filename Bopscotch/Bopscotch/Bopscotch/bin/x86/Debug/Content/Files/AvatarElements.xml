<?xml version="1.0" encoding="utf-8" ?>
<avatar-elements>
    <!-- Item type level node suffix attribute is used in completion screen ie: [item name] [suffix] unlocked ("Merry Man hat unlocked") -->
    <bodies suffix="body" bone-id="body">
        <!-- Bodies have mouth tints that override given values for mouths with fixed-colour of false-->
        <body name="Blue" texture-name="player-1-body" unlocked="true">
            <mouth tint-r="0" tint-g="0" tint-b="93" tint-a="255" />
        </body>
        <body name="Green" texture-name="player-2-body" unlocked="true">
            <mouth tint-r="0" tint-g="10" tint-b="0" tint-a="255" />
        </body>
        <body name="Pink" texture-name="player-3-body" unlocked="true">
            <mouth tint-r="206" tint-g="62" tint-b="111" tint-a="255" />
        </body>
        <body name="Yellow" texture-name="player-4-body" unlocked="true">
            <mouth tint-r="168" tint-g="154" tint-b="0" tint-a="255" />
        </body>
    </bodies>
    <gloves suffix="glove" bone-id="glove">
        <glove name="Yellow" texture-name="player-1-glove" unlocked="true" />
        <glove name="Red" texture-name="player-2-glove" unlocked="true" />
        <glove name="White Slim" texture-name="player-3-glove" unlocked="true" />
        <glove name="Green" texture-name="player-4-glove" unlocked="true" />
    </gloves>
    <eyes suffix="eyes" bone-id="eye">
        <eye name="Black" texture-name="player-male-eye" unlocked="true" />
        <eye name="Blue" texture-name="player-3-eye" unlocked="true" />
        <eye name="Anime" texture-name="player-4-eye" unlocked="true" />
    </eyes>
    <mouths suffix="mouth" bone-id="mouth">
        <mouth name="Male" texture-name="player-male-mouth" unlocked="true" fixed-colour="false" />
        <mouth name="Female" texture-name="player-female-mouth" unlocked="true" fixed-colour="false" />
    </mouths>
    <hats suffix="hat" bone-id="hat">
        <hat name="Merry Man" texture-name="player-hat-merry-man" unlocked="false" />
    </hats>
</avatar-elements>
